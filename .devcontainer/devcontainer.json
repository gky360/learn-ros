{
  "name": "ROS 2 Jazzy Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--privileged",
    "--net=host",
    "--security-opt",
    "seccomp=unconfined",
    "--shm-size=512m"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-python.python",
        "ms-iot.vscode-ros",
        "saoudrizwan.claude-dev"
      ]
    }
  },
  "containerEnv": {
    "ROS_DOMAIN_ID": "100"
  },
  "forwardPorts": [6080],
  "appPort": ["6080:80"]
}
