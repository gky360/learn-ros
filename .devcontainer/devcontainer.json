{
  "name": "ROS 2 Jazzy Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["--privileged", "--net=host"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-python.python",
        "ms-iot.vscode-ros",
        "saoudrizwan.claude-dev"
      ]
    }
  },
  "containerEnv": {
    "ROS_DOMAIN_ID": "100",
    "DISPLAY": "$(hostname):0",
    "QT_X11_NO_MITSHM": "1"
  },
  "mounts": [
    "source=$HOME/.Xauthority,target=/root/.Xauthority,type=bind,consistency=cached"
  ]
}
